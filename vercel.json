{
    "version": 2,
    "builds": [
      {
        "src": "app.py",
        "use": "@vercel/python"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "app.py"
      },
      {
        "src": "/auth/(.*)",  
        "dest": "app.py"
      },
      {
        "src": "/characters/(.*)",
        "dest": "app.py"
      },
      {
        "src": "/",         
        "dest": "app.py"
      }
    ]
  }